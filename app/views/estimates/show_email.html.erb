<div>
    <%= render(:partial => "layouts/estimating_sub_menu")%>
    <h2 class="center">Send Estimate <%= @estimate.project.name %></h2>
  <%= form_tag({:controller =>'estimates', :action => 'send_email', :id => @estimate.id}) do |f| %>
      <table>
          <tr>
              <th>To</th>
              <td><%= text_field_tag :to, @estimate.project.client.email  %></td>
          </tr>
          <tr>
              <th>Subject</th>
              <td><%= text_field_tag :subject  %></td>
          </tr>
          <tr>
              <th>Attachment</th>
              <td><%= link_to "Estimate-#{@estimate.project.name}.pdf", {:controller => 'estimates', :action => 'show', :id => @estimate.id, :format => :pdf}, :target => "_blank" %></td>
          </tr>
          <tr>
              <th>Body</th>
              <td><%= text_area_tag :body, nil, :rows => 5, :cols => 30 %></td>
          </tr>
      </table>
      <%= submit_tag "Send"  %>
      <%= link_to "Cancel", {:controller => 'estimates', :action => 'edit', :id => @estimate.id}  %>
  <% end %>
</div>