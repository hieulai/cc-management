<div>
    <%= render(:partial => "layouts/estimating_sub_menu") %>
    <div class="zurb-row">
        <div class="columns">
            <h2>Delete Estimate</h2>
            <%= form_for(:estimate, :url => {:action => 'destroy', :id => @estimate.id}) do |f| %>
              <%= render :partial => 'shared/errors', :locals => {:obj => @estimate} %>
              <p>Are you sure you want to delete this estimate?</p>

              <p class="reference-name"><%= @estimate.project.name %></p>

              <div class="control-group">
                  <%= submit_tag("Delete Estimate", :class => 'btn') %>
              </div>
            <% end %>
        </div>
    </div>
</div>