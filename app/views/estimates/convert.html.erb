<%= render(:partial => "layouts/estimating_sub_menu") %>
<h2>Convert Estimate</h2>

<%= form_for(:estimate, :url => {:action => 'conversion', :id => @estimate.id}, :html => {class: 'form-horizontal'}) do |f| %>

  <div class="control-group">
      <%= f.label :status, 'Estimate Status', class: 'col-lg-2 control-label' %>
      <div class="controls">
          <%= f.select(:status, ['Current Estimate', 'Past Estimate']) %>
      </div>
  </div>

  <div class="control-group">
      <div class="controls">
          <%= submit_tag("Convert Estimate", class: 'btn') %>
      </div>
  </div>

<% end %>