	<table summary="Estimate form fields">
		<tr>
					<th>Project Name</th>

					<td><%= select(:project, :id, Project.where("builder_id = ? AND status = ?", session[:builder_id], "Current Lead").collect{|s|[s.name, s.id]}, {:include_blank => true}) %>
		</tr>
		<tr>
			<th>Template</th>
			<td><%= select(:template, :id, ::Template.where("builder_id = ? AND estimate_id is NULL", session[:builder_id]).collect{|s|[s.name, s.id]}, {:include_blank => true}) %>
		</tr>
		<tr>
			<th>Progress</th>
			<td><%= f.select(:progress, ["In Progress", "Awaiting Approval", "Completed & Sent"]) %>
		</tr>
		<tr>
			<th>Due Date</th>
			<td><%= f.date_select(:deadline, :order => [:month, :day, :year], :include_blank => true) %>
		</tr>
		<tr>
			<th>Notes</th>
      <td><%= f.text_area(:notes, :rows => 5) %>
		</tr>
	</table>
	