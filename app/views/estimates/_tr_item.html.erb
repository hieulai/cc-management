<tr class="item item_category_<%= category_template.category.id %> <% if item.change_order? %> change_order <% end%>" id="item_<%= item.id %>">
    <td>
	</td>	
	<td>
        <%= item.name %>
    </td>
    <td>
        <%= link_to item.description, "#", :class => 'editable', :data => {:type => 'textarea', :rows => 4, :resource => 'item', :name => 'description', :pk => item.id, :url => url_for(:controller => 'items', :action => 'update', :id => item.id), :id => "item_#{item.id}"} %>
    </td>
    <td class="right">
        <%= link_to item.qty, "#", :class => 'editable', :data => {:type => 'text', :resource => 'item', :name => 'qty', :pk => item.id, :url => url_for(:controller => 'items', :action => 'update', :id => item.id), :id => "item_#{item.id}"} %>
    </td>
    <td class="center"><%= item.unit %></td>
    <td class="right">
        $<%= link_to price(item.estimated_cost), "#", :class => 'editable currency', :data => {:type => 'text', :resource => 'item', :name => 'estimated_cost', :pk => item.id, :url => url_for(:controller => 'items', :action => 'update', :id => item.id), :id => "item_#{item.id}"} %>
    </td>
    <td class="right">
        <%= price_tag(item.amount, "amount") %>
    </td>
    <td class="right"><%= price_tag(item.markup, "markup") %></td>
    <td class="right">
        $<div class="margin"><%= link_to price(item.margin), "#", :class => 'editable currency', :data => {:type => 'text', :resource => 'item', :name => 'margin', :pk => item.id, :url => url_for(:controller => 'items', :action => 'update', :id => item.id), :id => "item_#{item.id}"} %></div>
    </td>
    <td class="right">
        <%= price_tag(item.price, "price") %>
    </td>
    <td class="button-container">
        <%= link_to raw("<button type=\"button\">+</button>"), "#" , :class => 'trigger-add'%>
        <%= link_to raw("<button type=\"button\">-</button>"), {:controller => 'items', :action => 'destroy', :id => item.id}, :remote => true, :class => 'remove-item' %>
    </td>
</tr>