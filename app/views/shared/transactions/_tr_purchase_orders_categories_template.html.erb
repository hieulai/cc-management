<tr class="clickable <% if t.reconciled%> unclickable <% end %>">
    <td class="center">
        <%= t.date %>
        <%= link_to("Edit", {:controller => 'accounting', :action => 'edit_purchase_order', :id => t.transactionable.purchase_order.id}, :class => 'action edit clickable-link', :style => 'display: none') %>
    </td>
    <td>Bill</td>
    <td><%= t.transactionable.purchase_order.bill.id %></td>
    <td><%= t.transactionable.purchase_order.payer.try(:display_name) %></td>
    <td><%= t.transactionable.purchase_order.notes %></td>
    <td class="right"><%= price_tag(t.amount) %></td>
    <td class="center action-container">
        <%= check_box_tag("#{t.class.name}_#{t.id}", t.id, t.reconciled, :data => {:remote => true, :url => url_for(:action => "reconcile", :id => t.id)}) %>
    </td>
    <td class="right"><%= price_tag(balance) %></td>
</tr>