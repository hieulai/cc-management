<div>
    <%= render(:partial => "layouts/accounting_sub_menu") %>
    <div class="zurb-row">
        <div class="columns">
            <h2>Delete Invoice</h2>

            <%= form_for(:invoice, :url => {:action => 'destroy_invoice', :id => @invoice.id}) do |f| %>
              <% if @invoice.errors.any? %>
                <div id="errorExplanation">
                    <h2><%= pluralize(@invoice.errors.count, "Error") %> prohibited
                        this invoice from being deleted:</h2>
                    <ul>
                        <% @invoice.errors.full_messages.each do |msg| %>
