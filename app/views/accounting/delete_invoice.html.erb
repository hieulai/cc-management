<div>
    <%= render(:partial => "layouts/accounting_sub_menu") %>
    <div class="zurb-row">
        <div class="columns">
            <h2>Delete Invoice</h2>

            <%= form_for(:invoice, :url => {:action => 'destroy_invoice', :id => @invoice.id}) do |f| %>
              <%= render :partial => 'shared/errors', :locals => {:obj => @invoice} %>

              <p>Are you sure you want to delete this invoice?</p>

              <div class="form-buttons">
                  <%= submit_tag("Delete", class: 'btn') %>
              </div>

            <% end %>
        </div>
    </div>
</div>