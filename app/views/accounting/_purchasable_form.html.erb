<% content_for :javascript do %>
  <script type='text/javascript'>
    $(document).ready(function () {
    PurchaseOrder.init();
    })
  </script>
<% end %>

<div class="row">
    <div class="span6">
        <div class="control-group">
            <%= f.label :payer_name, "Payor", class: 'col-lg-2 control-label' %>
            <div class="controls">
                <%= hidden_field_tag :payer, purchasable.payer.try(:display_name), data: {url: people_autocomplete_name_path} %>
                <%= f.hidden_field :payer_id, class: 'payer-id' %>
                <%= f.hidden_field :payer_type, class: 'payer-type' %>
            </div>
        </div>
        <div class="control-group">
            <%= f.label :project_id, "Project", class: 'col-lg-2 control-label' %>
            <div class="controls"><%= f.select(:project_id, Project.where("builder_id = ? AND status ='Current Project'", session[:builder_id]).collect { |s| [s.name, s.id] }, {:include_blank => true}, :data => {:remote => true, :url => url_for(:action => "show_project_categories_template", :id => purchasable.id, :type => purchasable.class.name)}) %></div>
        </div>
        <div class="control-group">
            <%= f.label :category_id, "Category", class: 'col-lg-2 control-label' %>
            <div class="controls">
                <div id="categories_template-placeholder">
                    <% categories_template = purchasable.categories_template_id.present? ? CategoriesTemplate.find(purchasable.categories_template_id) : CategoriesTemplate.new %>
                    <%= f.select(:category_id, grouped_category_options(purchasable.project), {:selected => categories_template.category_id, :include_blank => true},
                                 :data => {:remote => true, :url => url_for(:action => "show_category_items", :id => purchasable.id, :type => purchasable.class.name, :project_id => purchasable.project.try(:id))}) %>
                </div>
            </div>
        </div>
        <% unless purchasable.new_record? %>
          <div class="control-group">
              <%= f.label :purchasable_id, "#{purchasable.class.name.underscore.humanize} #", class: 'col-lg-2 control-label' %>
              <div class="controls"><%= purchasable.id %></div>
          </div>
        <% end %>

        <div class="control-group">
            <%= f.label :date, "Order Date", class: 'col-lg-2 control-label' %>
            <div class="controls">
                <%= f.text_field(:date, class: 'datepicker', :value => f.object.try(:date).try(:strftime, '%m-%d-%Y')) %>
                <%= f.hidden_field(:date, id: 'purchasable_date_hidden', :value => f.object.try(:date).try(:strftime, '%Y-%m-%d')) %>
            </div>
        </div>
        <div class="control-group">
            <%= f.label :due_date, "Due Date", class: 'col-lg-2 control-label' %>
            <div class="controls">
                <%= f.text_field(:due_date, class: 'datepicker', :value => f.object.try(:due_date).try(:strftime, '%m-%d-%Y')) %>
                <%= f.hidden_field(:due_date, id: 'purchasable_due_date_hidden', :value => f.object.try(:due_date).try(:strftime, '%Y-%m-%d')) %>
            </div>
        </div>
        <div class="control-group">
            <%= f.label :sales_tax_rate, "Sales Tax Rate", class: 'col-lg-2 control-label' %>
            <div class="controls"><%= f.text_field :sales_tax_rate %>(%)</div>
        </div>
        <div class="control-group">
            <%= f.label :notes, "Notes", class: 'col-lg-2 control-label' %>
            <div class="controls"><%= f.text_area(:notes, size: '40x5') %></div>
        </div>
    </div>
</div>