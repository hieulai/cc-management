<tr class="category" id="category_<%= category_template.category.id %>">
    <td colspan=7>
        <h3>
            <%= category_template.category.name %>
        </h3>
    </td>
</tr>
<%
   from_date = from_date.presence || '1900-01-01'
   to_date =  to_date.presence || '3000-01-01'
   category_template.bills.date_range(from_date, to_date).each do |bill| %>
  <%= render :partial => 'accounting/cost_plus_bid/invoice_tr_bill', :locals => {:bill => bill, :category => category_template.category} %>
<% end %>
<tr class="subtotal bill_category_<%= category_template.category.id %>">
    <td colspan=4>
        <div class="category-name"><%= category_template.category.name + ' '%>Subtotal</div>
    </td>
    <td class="right"><div class="subtotal-amount"></div></td>
    <td class="right"><div class="subtotal-prior-amount"></div></td>
    <td class="right"><div class="subtotal-invoice-amount"></div></td>
</tr>