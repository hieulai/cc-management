<div>
    <%= render(:partial => "layouts/accounting_sub_menu") %>
    <div class="zurb-row main-action-bar">
    <div class="large-3 medium-4 columns">
        <%= link_to("+ Purchase Order", {:action => 'new_purchase_order'}, :id => 'add-purchase-order', :class => 'add action-button') %>
        <span class="trigger help action-button">Instructions >></span>

        <div class="instructions">
            <p>Click on the row of the purchase order you want to edit their information.</p>
        </div>
    </div>
    <div class="large-6 medium-6 columns">
        <h1>Purchase Orders</h1>
    </div>
    <div class="large-3 medium-2 columns">
    </div>
</div>
    <div class="zurb-row">
        <div class="columns margin-bottom">
            <%= form_tag('purchase_orders', :method => 'get', :class => 'form-inline') do %>
              <p>
                  <%= label_tag :query, "Search" %>
                  <%= text_field_tag(:query, @query) %>
              </p>
            <% end %>
            <%= render(:partial => "purchase_orders", :locals => {:purchase_orders => @purchase_orders}) %>
        </div>
    </div>
</div>