<div id="receivables">
    <%= render(:partial => "layouts/accounting_sub_menu") %>
    <div class="zurb-row main-action-bar">
        <div class="large-3 medium-4 columns">
            <%= link_to("Instructions >>", {:action => 'show'}, :title => 'Instructions', :class => 'help action-button') %>
        </div>
        <div class="large-6 medium-6 columns">
            <h1>Accounts Receivables</h1>
        </div>
        <div class="large-3 medium-2 columns">
        </div>
    </div>
    <div class="zurb-row">
        <div class="columns">
            <h3>Recent Invoices</h3>

            <div class="button-group">
                <%= link_to("All Invoices >>", {:action => 'invoices'}, :class => 'btn') %>
                <%= link_to("+ Invoice", {:action => 'new_invoice'}, :id => 'add-invoice', :class => 'action vew btn') %>
            </div>
            <%= render(:partial => "invoices", :locals => {:invoices => @invoices}) %>

            <h3>Recent Receipts</h3>

            <div class="button-group">
                <%= link_to("All Receipts >>", {:action => 'receipts'}, :class => 'btn') %>
                <%= link_to("+ Receipt", {:action => 'new_receipt'}, :id => 'add-receipt', :class => 'action vew btn') %>
            </div>
            <%= render(:partial => "receipts", :locals => {:receipts => @receipts}) %>

            <h3>Recent Deposits</h3>

            <div class="button-group">
                <%= link_to("All Deposits >>", {:action => 'deposits'}, :class => 'btn') %>
                <%= link_to("+ Deposit", {:action => 'new_deposit'}, :id => 'add-deposit', :class => 'action vew btn') %>
            </div>
            <%= render(:partial => "deposits", :locals => {:deposits => @deposits}) %>
        </div>
    </div>
</div>







