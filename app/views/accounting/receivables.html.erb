<div id="receivables">
    <%= render(:partial => "layouts/accounting_sub_menu") %>
    <div class="zurb-row main-action-bar">
        <div class="large-3 medium-4 columns">
            <%= link_to("Instructions >>", {:action => 'show'}, :title => 'Instructions', :class => 'help action-button') %>
        </div>
        <div class="large-6 medium-6 columns">
            <h1>Accounts Receivables</h1>
        </div>
        <div class="large-3 medium-2 columns">
        </div>
    </div>
    <div class="zurb-row">
        <div class="columns">
            <%= render(:partial => "account_receivables") %>
        </div>
    </div>
    <div class="zurb-row">
        <div class="columns">
            <div class="zurb-row">
                <h3>Invoices</h3>

                <div class="button-group">
                    <%= link_to("+ Invoice", {:action => 'new_invoice', :original_url => url_for(:action => "receivables")}, :id => 'add-invoice', :class => 'action vew btn') %>
                    <%= link_to("All Invoices >>", {:action => 'invoices'}, :class => 'btn') %>
                </div>
            </div>

            <div class="zurb-row">
                <h3>Receipts</h3>

                <div class="button-group">
                    <%= link_to("+ Receipt", {:action => 'new_receipt', :original_url => url_for(:action => "receivables")}, :id => 'add-receipt', :class => 'action vew btn') %>
                    <%= link_to("All Receipts >>", {:action => 'receipts'}, :class => 'btn') %>
                </div>
            </div>

            <div class="zurb-row">
                <h3>Deposits</h3>

                <div class="button-group">
                    <%= link_to("+ Deposit", {:action => 'new_deposit', :original_url => url_for(:action => "receivables")}, :id => 'add-deposit', :class => 'action vew btn') %>
                    <%= link_to("All Deposits >>", {:action => 'deposits'}, :class => 'btn') %>
                </div>
            </div>
        </div>
    </div>
</div>







