<% accounts = Account.raw(session[:builder_id]) %>
<% if accounts.any? %>
  <div class="zurb-row">
      Account
      <%= hidden_field_tag(:account_id, session[:account_id], {:class => "to_select2", :data => {:source => select2_bank_accounts_json, :remote => true, :url => url_for(:action => "show_account_details_receivables")}}) %>
  </div>
  <div class="account-details">
      <%= render(:partial => "account_details_receivables", :locals => {:account => session[:account_id].present? ? Account.find(session[:account_id].to_i) : accounts.first}) %>
  </div>
  <div class="zurb-row">
      Deposits Held Balance =
      <%= price_tag Receipt.raw(session[:builder_id]).unbilled.map(&:amount).compact.sum, "inline-block" %>
  </div>
  <div class="zurb-row">
      Receivables Balance =
      <%= price_tag Invoice.raw(session[:builder_id]).unbilled.map(&:amount).compact.sum, "inline-block" %>
  </div>

<% end %>
