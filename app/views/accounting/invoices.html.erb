<div>
    <%= render(:partial => "layouts/accounting_sub_menu") %>
    <div class="zurb-row main-action-bar">
        <div class="large-3 medium-4 columns">
            <%= link_to("+ Invoice", {:action => 'new_invoice'}, :id => 'add-invoice', :class => 'add action-button') %>
            <span class="trigger help action-button">Instructions >></span>

            <div class="instructions">
                <p>Click on the row of the invoice you want to edit their information.</p>
            </div>
        </div>
        <div class="large-6 medium-6 columns">
            <h1>Invoices</h1>
        </div>
        <div class="large-3 medium-2 columns">
        </div>
    </div>
    <div class="zurb-row">
        <div class="columns">
            <div class="button-group">
                <%= form_tag('invoices', :method => 'get', :class => 'form-inline') do %>
                  <p>
                      <%= label_tag :query, "Search" %>
                      <%= text_field_tag(:query, @query) %>
                  </p>
                <% end %>
            </div>
            <%= render(:partial => "invoices", :locals => {:invoices => @invoices}) %>
        </div>
    </div>
</div>

