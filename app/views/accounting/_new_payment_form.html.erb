<script>
  $(function() {
	$('#payment_vendor_name').autocomplete({
	source: $('#payment_vendor_name').data('autocomplete-source')
	});
  });
</script>
	
	

<table>
	<tr>
		<th>Account</th>
		<td><%= select(:account, :id, Account.where("builder_id = ?", session[:builder_id]).collect{|s|[s.name, s.id]}) %></td>
	</tr>
	<tr>
		<th>Payee</th>
  	  	<td><%= f.text_field :vendor_name, data: {autocomplete_source: Vendor.order(:primary_first_name).map(&:full_name)} %></td>
	</tr>
	<tr>
		<th>Date</th>
		<td><%= f.date_select(:date, :order => [:month, :day, :year], :include_blank => true) %></td>
	</tr>
	<tr>
		<th>Amount</th>
		<td><%= f.text_field(:amount) %>
	</tr>
	<tr>
		<th>Memo</th>
		<td><%= f.text_field(:memo) %></td>
	</tr>
</table>
	
