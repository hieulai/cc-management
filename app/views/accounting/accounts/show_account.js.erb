<% if @type == Client.name %>
  $("#client-details").html('<%= escape_javascript(render(:partial => "accounting/accounts/client_details", :locals => {:client => @object, :project => @project, :transactions => @transactions, :balance => @balance})) %>');
<% elsif @type == Vendor.name %>
  $("#vendor-details").html('<%= escape_javascript(render(:partial => "accounting/accounts/vendor_details", :locals => {:vendor => @object, :project => @project, :transactions => @transactions, :balance => @balance})) %>');
<% end %>