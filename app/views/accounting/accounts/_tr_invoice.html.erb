<tr class="clickable <% if t.reconciled%> unclickable <% end %>">
    <td class="center">
        <%= t.date %>
        <%= link_to("Edit", {:controller => 'accounting', :action => 'edit_invoice', :id => t.transactionable_id}, :class => 'action edit clickable-link', :style => 'display: none') %>
    </td>
    <td>Invoice</td>
    <td class="center"><%= t.transactionable.reference %></td>
    <td></td>
    <td class="right"><%= price_tag(t.amount) %></td>
    <td class="right"><%= price_tag(balance) %></td>
</tr>