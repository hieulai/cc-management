<% if vendor %>
  <div class="zurb-row">
      <div class="large-6 medium-6 columns">
          <p>
              <strong>Company</strong>
              <%= vendor.company_name %>
          </p>

          <p>
              <strong>Website</strong>
              <%= vendor.website %>
          </p>

          <p>
              <strong>Trade</strong>
              <%= vendor.trade %>
          </p>

          <p>
              <strong>Vendor Type</strong>
              <%= vendor.type %>
          </p>

          <p>
              <strong>Service provided</strong>
              <%= vendor.service_provided %>
          </p>

          <p>
              <strong>Address</strong>
              <%= vendor.address %>
          </p>

          <p>
              <strong>City</strong>
              <%= vendor.city %>
          </p>

          <p>
              <strong>State</strong>
              <%= vendor.state %>
          </p>

          <p>
              <strong>Zipcode</strong>
              <%= vendor.zipcode %>
          </p>
      </div>
      <div class="large-4 medium-4 columns">
          <%= render(:partial => "shared/profile_account_details", :locals => {:object => vendor.profiles[0] || vendor.profiles.build}) %>
      </div>
      <div class="large-2 medium-2 columns">
          <div class="more-actions">
              <div class="btn-group">
                  <%= link_to "Print", {:action => 'show_account', :type => Vendor.name, :id => vendor.id, project_id: project.try(:id), :format => :pdf}, :target => '_blank', :class => 'btn' %>
                  <%= link_to "Email", {:action => 'show_account_email', :type => Vendor.name, :id => vendor.id, project_id: project.try(:id) }, :target => '_blank', :class => 'btn' %>
              </div>
          </div>
      </div>
  </div>
  <div class="zurb-row">
      <div class="columns">
          <p>
              <strong>Notes</strong>
              <%= vendor.notes %>
          </p>
      </div>
  </div>
  <%= render(:partial => "accounting/accounts/table_transactions", :locals => {:transactions => transactions, :balance => balance }) %>
<% end %>