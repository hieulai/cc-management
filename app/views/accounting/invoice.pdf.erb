<%- invoice ||= nil
    @invoice = invoice if invoice.present?
    @builder = @invoice.builder
    @client = @invoice.estimate.project.client
%>
<% content_for :head do %>
  <div class="left-header">
      <%= pdf_image_tag(@builder.image.name_url, :width => "200") if @builder.image.try(:name).present? %>
      <div class="address">
          <%= @builder.address %>
      </div>
      <div class="phone">
          <%= @builder.office_phone %>
      </div>
      <div class="website">
          <%= @builder.website %>
      </div>
      <div class="slogan">
      <%= "#{@builder.slogan}" if @builder.slogan.present? %>
      </div>
  </div>
  <div class="right-header">
      <table class="top">
          <tr>
              <td>Invoice</td>
          </tr>
          <tr>
              <td>Date</td>
          </tr>
          <tr>
              <td>
                  Created Date: <%= @invoice.created_at.strftime("%m/%d/%Y") %>
                  <br/>
                  Sent Date: <%= @invoice.sent_date.try(:strftime, "%m/%d/%Y") %>
              </td>
          </tr>
          <tr>
              <td><%= @invoice.estimate.project.name %></td>
          </tr>
      </table>
      <table class="bottom">
          <tr>
              <td>Name / Address</td>
          </tr>
          <tr>
              <td>
                  <%= @client.full_name %>
                  <br/>
                  <%= @client.address %>
                  <br/>
                  <%= @client.city %> <%= ", #{@client.state}" if @client.state.present? %> <%=", #{@client.zipcode}" if @client.zipcode.present? %>
              </td>
          </tr>
      </table>
  </div>
<% end %>
<% if @invoice.estimate.try(:cost_plus_bid?) %>
  <%= render(:partial => 'accounting/cost_plus_bid/invoice_template',
             :locals => {:template => @invoice.try(:estimate).try(:template),
                         :from_date => @invoice.bill_from_date,
                         :to_date => @invoice.bill_to_date}) %>
<% else %>
  <%= render(:partial => "accounting/invoice_template", :locals => {:invoice => @invoice}) %>
<% end %>
