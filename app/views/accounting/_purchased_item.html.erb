<tr class="purchased">
    <td class="center"><%= link_to "x", "#", :class => 'remove-item btn' %></td>
    <td>
        <%= item.name %>
        <%= hidden_field_tag 'items[][name]', item.name %>
    </td>
    <td>
        <%= item.description %>
        <%= hidden_field_tag 'items[][description]', item.description %>
    </td>
    <td class="right">
        <%= text_field_tag 'items[][qty]', item.qty, :class => "text-field input-mini"%>
    </td>
    <td class="right">
        $<%= text_field_tag 'items[][estimated_cost]', item.estimated_cost(true), :class => "text-field input-mini"%>
    </td>
    <td class="right light-blue">
        <div class="actual-amount-placeholder">
            <%= price_tag item.amount(true), 'actual-amount' %>
            <%= hidden_field_tag 'items[][actual_cost]', item.actual_cost %>
        </div>
    </td>
    <% if type == PurchaseOrder.name %>
      <td class="right">
          <div class="post-tax-actual-amount"></div>
      </td>
    <% end %>
    <td class="right">
        <%= price_tag 0 %>
    </td>
</tr>