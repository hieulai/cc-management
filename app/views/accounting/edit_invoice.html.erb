<div>
	<%= render(:partial => "layouts/accounting_sub_menu")%>
	<h1 class="center">Edit Invoice</h1>
	
	<%= form_for(@invoice, :url => {:action => 'update_invoice', :id => @invoice.id}, html: {class: 'form-horizontal'}) do |f| %>
  <div class="more-actions">
      <%= link_to "Print", {:action => 'invoice', :id => @invoice.id, :format => :pdf}, :target => '_blank' %>
      <br/>
      <%= link_to "Email", {:action => 'invoice_email', :id => @invoice.id}, :target => '_blank' %>
  </div>
	<%= render(:partial => "invoice_form", :locals => {:f => f})%>


	<div class="form-buttons">
      <%= submit_tag("Save", class: 'btn') %>
	</div>
	
	<% end %>
 
</div>