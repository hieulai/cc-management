<div>
    <%= render(:partial => "layouts/accounting_sub_menu") %>
    <div class="zurb-row">
        <div class="columns">
            <h1 class="center">New Payment</h1>
            <%= form_for(@payment, :url => {:action => 'create_payment'}, :html => {:class => 'form-horizontal'}) do |f| %>
                <%= render(:partial => "new_payment_form", :locals => {:f => f}) %>
                <div class="form-buttons margin-bottom">
                    <%= submit_tag("Pay", :class => 'btn') %>
                </div>
            <% end %>
        </div>
    </div>
</div>