var original_url = $('#original_url').val();
var vendor_name = $('#vendor_name').val();
var bill_vendor_id = $('#bill_vendor_id').val();
var bill_due_date = $('#bill_due_date').val();
var purchasable_date_hidden = $('#purchasable_date_hidden').val();
var bill_notes = $('#bill_notes').val();
var bill_create_payment = $('#bill_create_payment').is(':checked');
var payment_account_id = $('#payment_account_id').val();
var payment_method = $('#payment_method').val();
var payment_date = $('#payment_date').val();
var payment_due_date_hidden = $('#payment_due_date_hidden').val();
var payment_reference = $('#payment_reference').val();
var payment_memo = $('#payment_memo').val();

$('#bill-form').html('<%= escape_javascript(render(:partial => "bill_form", :locals => {:purchasable => @bill})) %>');
transformToSelect2For($('#bill-form'));
transformToDatePickerFor($('#bill-form'));
$('#original_url').val(original_url);
$('#vendor_name').val(vendor_name);
$('#bill_vendor_id').val(bill_vendor_id);
$('#bill_due_date').val(bill_due_date);
$('#purchasable_date_hidden').val(purchasable_date_hidden);
$('#bill_notes').val(bill_notes);
if (bill_create_payment) {
    $('#bill_create_payment').attr('checked', 'checked');
    $('#payment-from-bill').show();
}
$('#payment_account_id').val(payment_account_id);
$('#payment_method').val(payment_method);
$('#payment_date').val(payment_date);
$('#payment_due_date_hidden').val(payment_due_date_hidden);
$('#payment_reference').val(payment_reference);
$('#payment_memo').val(payment_memo);

<% if @bill.job_costed %>
<% else %>
initAccounting("bill", "item");
<% end %>