<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<HTML>
<HEAD>
    <META http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <META http-equiv="X-UA-Compatible" content="IE=8">
    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
    <script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <%= wicked_pdf_javascript_include_tag "toword" -%>
    <STYLE type="text/css">

      body {
        margin-top: 0px;
        margin-left: 0px;
      }

      #page_1 {
        position: relative;
        overflow: hidden;
        margin: 82px 0px 62px 48px;
        padding: 0px;
        border: none;
        width: 768px;
      }

      #page_1 #id_1 {
        border: none;
        margin: 0px 0px 0px 0px;
        padding: 0px;
        border: none;
        width: 768px;
        overflow: hidden;
      }

      #page_1 #id_2 {
        border: none;
        margin: 240px 0px 0px 0px;
        padding: 0px;
        border: none;
        width: 709px;
        overflow: hidden;
      }

      .ft0 {
        font: 13px 'Helvetica';
        line-height: 16px;
      }

      .p0 {
        text-align: left;
        padding-left: 623px;
        margin-top: 0px;
        margin-bottom: 0px;
      }

      .p1 {
        text-align: left;
        margin-top: 0px;
        margin-bottom: 0px;
        white-space: nowrap;
      }

      .p2 {
        text-align: right;
        margin-top: 0px;
        margin-bottom: 0px;
        white-space: nowrap;
      }

      .p3 {
        text-align: left;
        margin-top: 16px;
        margin-bottom: 0px;
      }

      .p4 {
        text-align: left;
        padding-left: 48px;
        margin-top: 16px;
        margin-bottom: 0px;
      }

      .p5 {
        text-align: left;
        padding-left: 48px;
        margin-top: 0px;
        margin-bottom: 0px;
      }

      .p6 {
        text-align: right;
        padding-right: 122px;
        margin-top: 0px;
        margin-bottom: 0px;
        white-space: nowrap;
      }

      .p7 {
        text-align: left;
        padding-left: 232px;
        margin-top: 0px;
        margin-bottom: 0px;
        white-space: nowrap;
      }

      .td0 {
        padding: 0px;
        margin: 0px;
        width: 320px;
        vertical-align: bottom;
      }

      .td1 {
        padding: 0px;
        margin: 0px;
        width: 285px;
        vertical-align: bottom;
      }

      .td2 {
        padding: 0px;
        margin: 0px;
        width: 426px;
        vertical-align: bottom;
      }

      .td3 {
        padding: 0px;
        margin: 0px;
        width: 251px;
        vertical-align: bottom;
      }

      .td4 {
        padding: 0px;
        margin: 0px;
        width: 398px;
        vertical-align: bottom;
      }

      .td5 {
        padding: 0px;
        margin: 0px;
        width: 311px;
        vertical-align: bottom;
      }

      .tr0 {
        height: 16px;
      }

      .tr1 {
        height: 19px;
      }

      .t0 {
        width: 605px;
        margin-left: 64px;
        margin-top: 32px;
        font: 13px 'Helvetica';
      }

      .t1 {
        width: 677px;
        margin-left: 32px;
        margin-top: 125px;
        font: 13px 'Helvetica';
      }

      .t2 {
        width: 709px;
        margin-top: 240px;
        font: 13px 'Helvetica';
      }

      .t3 {
        width: 677px;
        margin-left: 32px;
        margin-top: 45px;
        font: 13px 'Helvetica';
      }

      .t4 {
        width: 709px;
        font: 13px 'Helvetica';
      }

      .to-words{
        display: inline;
        font: 13px 'Helvetica';
      }

      .inline{
        display: inline;
      }

      .capitalize{
        text-transform: capitalize;
        display: inherit;
        font: 13px 'Helvetica';
      }

    </STYLE>
    <script type="text/javascript">
      $(document).ready(function(){
        $(".to-words").each(function () {
          $(this).html(toWords($(this).text()));
        });
      });
    </script>
</HEAD>

<BODY>
<DIV id="page_1">
    <DIV id="id_1">
        <P class="p0 ft0"><%= @payment.date.strftime("%m/%d/%Y") %></P>
        <TABLE cellpadding=0 cellspacing=0 class="t0">
            <TR>
                <TD class="tr0 td0"><P class="p1 ft0"><%= @payment.payer.display_name %></P></TD>
                <TD class="tr0 td1"><P class="p2 ft0">**<%= price(@payment.total_amount) %></P></TD>
            </TR>
        </TABLE>
        <P class="p3 ft0"><span class="to-words"><%= price(@payment.total_amount) %></span>*********************************************************</P>

        <P class="p4 ft0"><%= @payment.payer.display_name %></P>

        <P class="p5 ft0"><%= @payment.payer.address %></P>

        <P class="p5 ft0"><%= @payment.payer.city %> <%= ", #{@payment.payer.state}" if @payment.payer.state.present? %> <%=", #{@payment.payer.zipcode}" if @payment.payer.zipcode.present? %></P>
        <TABLE cellpadding=0 cellspacing=0 class="t1">
            <TR>
                <TD class="tr0 td2"><P class="p1 ft0"><%= @payment.payer.display_name %></P></TD>
                <TD class="tr0 td3"><P class="p6 ft0"><%= @payment.date.strftime("%m/%d/%Y") %></P></TD>
            </TR>
            <TR>
                <TD class="tr1 td2">
                    <% @payment.bills.each do |b| %>
                      <% if b.notes.present? %>
                        <P class="p7 ft0"><%= b.notes %></P>
                      <% end %>
                    <% end %>
                </TD>
                <TD class="tr1 td3"><P class="p2 ft0"><%= price(@payment.total_amount) %></P></TD>
            </TR>
        </TABLE>
        <TABLE cellpadding=0 cellspacing=0 class="t2">
            <TR>
                <TD class="tr0 td4"><P class="p1 ft0"><%= @payment.account.name %></P></TD>
                <TD class="tr0 td5"><P class="p2 ft0"><%= price(@payment.total_amount) %></P></TD>
            </TR>
        </TABLE>
        <TABLE cellpadding=0 cellspacing=0 class="t3">
            <TR>
                <TD class="tr0 td2"><P class="p1 ft0"><%= @payment.payer.display_name %></P></TD>
                <TD class="tr0 td3"><P class="p6 ft0"><%= @payment.date.strftime("%m/%d/%Y") %></P></TD>
            </TR>
            <TR>
                <TD class="tr1 td2">
                    <% @payment.bills.each do |b| %>
                      <% if b.notes.present? %>
                        <P class="p7 ft0"><%= b.notes %></P>
                      <% end %>
                    <% end %>
                </TD>
                <TD class="tr1 td3"><P class="p2 ft0"><%= price(@payment.total_amount) %></P></TD>
            </TR>
        </TABLE>
    </DIV>
    <DIV id="id_2">
        <TABLE cellpadding=0 cellspacing=0 class="t4">
            <TR>
                <TD class="tr0 td4"><P class="p1 ft0"><%= @payment.account.name %></P></TD>
                <TD class="tr0 td5"><P class="p2 ft0"><%= price(@payment.total_amount) %></P></TD>
            </TR>
        </TABLE>
    </DIV>
</DIV>
</BODY>
</HTML>
