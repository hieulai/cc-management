<table class="grid-view data-tables" id="payment-list" summary="Payment List" cellspacing="0">
    <thead>
    <tr class="header">
        <%= sorted_ths [["Paid", "date"],
                        ["Reference #", "reference"],
                        ["Payee", "payer_name"],
                        ["Type", "method"],
                        ["Account", "account_name"],
                        ["Amount", "amount"],
                        ["Memo", "memo"]] %>
    </tr>
    </thead>
    <tbody>
    <% payments.each do |payment| %>
      <tr class="clickable">
          <td class="center">
              <%= payment.date %>
              <%= link_to("Edit", {:action => 'edit_payment', :id => payment.id}, :class => 'action edit clickable-link', style: 'display: none') %>
          </td>
          <td>
              <%= payment.reference %>
          </td>
          <td><%= payment.payer_name %></td>
          <td><%= payment.method %></td>
          <td><%= payment.account_name %></td>
          <td class="right"><%= price_tag(payment.cached_total_amount) %></td>
          <td><%= payment.memo %></td>
      </tr>
    <% end %>
    </tbody>

</table>
<%= paginate payments %>
