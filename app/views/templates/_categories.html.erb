<div class="nested-fields">
    <div class="control-group" style="margin-left:40px">
        <%= f.label :category_id, "Category", class: 'col-lg-2 control-label' %>
        <div class='controls'>
            <%= f.select :category_id, @categories.map { |category| [category.name, category.id] }, {prompt: "Select Category"}, class: "template_categories" %>
            <%= link_to_remove_association("Delete", f, style: "margin-left: 30px") %>
        </div>

    </div>

    <div>
        <%= f.fields_for :items do |item| %>
          <%= render('items', f: item) %>
        <% end %>
        <p style="margin-left: 145px"><%= link_to_add_association 'Add Item', f, :items, partial: 'items' %></p>
    </div>
</div>
