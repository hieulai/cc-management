<div>
    <%= render(:partial => "layouts/prospecting_sub_menu") %>
    <div class="zurb-row">
        <div class="columns">
            <h2>Add Prospect</h2>
            <%= form_for @prospect, :url => {:action => 'create'}, :html => {:class => 'form-horizontal'} do |f| %>
                <%= render :partial => 'shared/errors', :locals => {:obj => @prospect} %>
                <%= render(:partial => "form", :locals => {:f => f}) %>
                <div class="control-group">
                    <div class='controls'>
                        <%= submit_tag("Create", :class => 'btn') %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>