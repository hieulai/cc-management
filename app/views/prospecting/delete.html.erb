<div>
    <%= render(:partial => "layouts/prospecting_sub_menu") %>

    <div class="zurb-row main-action-bar">
        <div class="large-3 medium-4 columns">
            &nbsp;
        </div>
        <div class="large-6 medium-6 columns">
            <h1 class="center">
                Delete Prospect
            </h1>
        </div>
        <div class="large-3 medium-2 columns">
        </div>
    </div>
    <div class="zurb-row">
        <div class="columns">
            <%= form_for(:prospect, :url => {:action => 'destroy', :id => @prospect.id}) do |f| %>

              <p>Are you sure you want to delete this prospect?</p>

              <p class="reference-name"><%= @prospect.full_name %></p>

              <div class="form-buttons">
                  <%= submit_tag("Delete", class: 'btn') %>
              </div>

            <% end %>
        </div>
    </div>
</div>