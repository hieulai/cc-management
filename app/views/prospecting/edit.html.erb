<div>
    <%= render(:partial => "layouts/prospecting_sub_menu") %>

    <div class="zurb-row main-action-bar">
        <div class="large-3 medium-4 columns">
            <%= link_to("View >>", {:action => 'show', :id => @prospect.id}, :title => 'Edit', :class => 'edit-large action-button') %>
            <%= link_to("Delete >>", {:action => 'delete', :id => @prospect.id}, :title => 'Edit', :class => 'delete-large action-button') %>
        </div>
        <div class="large-6 medium-6 columns">
            <h1 class="center">
                Edit Prospecting
            </h1>
        </div>
        <div class="large-3 medium-2 columns">
        </div>
    </div>

    <div class="zurb-row">
        <div class="columns">
            <%= form_for @prospect, :url => {:action => 'update', :id => @prospect.id}, html: {class: 'form-horizontal'} do |f| %>

              <%= render(:partial => "form", :locals => {:f => f}) %>

              <div class="control-group">
                  <div class='controls'>
                      <%= submit_tag("Update", class: 'btn') %>
                  </div>
              </div>
            <% end %>
        </div>
    </div>

</div>
