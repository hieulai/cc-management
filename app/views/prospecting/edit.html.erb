<div>
	<%= render(:partial => "layouts/prospecting_sub_menu")%>
	<h1 class="center">
		Edit -
		<% if @prospect.company == '' %>
			<%= @prospect.full_name %>
		<% else %>
			<%= @prospect.company %>
		<% end %>
	</h1>
	
	<%= link_to("View >>", {:action => 'show', :id => @prospect.id}) %>
	</br>
	</br>
	<%= link_to("Delete >>", {:action => 'delete', :id => @prospect.id}) %>
	<%= form_for @prospect, :url => {:action => 'update', :id => @prospect.id}, html: {class: 'form-horizontal'} do |f| %>
	
	<%= render(:partial => "form", :locals => {:f => f})%>

  <div class="control-group">
    <div class='controls'>
		    <%= submit_tag("Update", class: 'btn') %>
    </div>
	</div>
	
	<% end %>
	
</div>
