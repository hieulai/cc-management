    <%= form_for @category, :url => {:action => 'create'}, html: {class: 'form-horizontal'} do |f| %>

      <% if @category.errors.any? %>
        <div id="errorExplanation">
            <h2><%= pluralize(@category.errors.count, "Error") %> prohibited
                this category from being saved:</h2>
