<% unless @category.errors.any? %>
    var category = $("#category_<%=@id%>");
    var trItems = category.nextAll("tr.item_category_<%=@id%>");
    if (trItems.size() > 0) {
      trItems.remove();
    }
    category.remove();
    calculateTotals();
<% else %>
  alert('<%= @category.errors.full_messages.join(".") %>');
<% end %>

