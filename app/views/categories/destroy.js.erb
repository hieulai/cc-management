<% unless @category.errors.any? %>
    var category = $("#category_<%=@id%>");
    var trItems = category.nextAll("tr.item_category_<%=@id%>");
    if (trItems.size() > 0) {
      trItems.remove();
    }
    category.remove();
    Shared.calculateTotals();
<% else %>
    $.rails.createConfirmDialog('Information', '<%= @category.errors.full_messages.join(".") %>', true);
<% end %>

