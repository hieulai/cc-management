<div>
	<%= render(:partial => "sub_menu")%>
	<h1>Supplier Database</h1>
	<%= link_to("Instructions >>", {:action => 'show'}) %>
	</br>
	</br>
	<%= link_to("Add New Supplier >>", {:action => 'new'}) %>
	</br>
	</br>
	<%= form_tag('list', method: 'get') do %>
		<p>
			<%= label_tag :query, "Search" %>
			<%= text_field_tag(:query, @query) %>
		</p>
	<% end %>
	<table class="grid-view" summary="Project List">
		<tr class="header">
			<th>Actions</th>
			<th>Company</th>
			<th>Main Contact</th>
			<th>Primary Phone</th>
			<th>Email</th>
			<th>Website</th>
			<th>Notes</th>
			
					
		</tr>
		<% @suppliers.each do |s| %>
		
		<tr>
			<td class="center">
				<%= link_to("Show", {:action => 'show', :id => s.id}, :class => 'action edit') %>
				<%= link_to("Edit", {:action => 'edit', :id => s.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => s.id}, :class => 'action delete') %>
			</td>
			<td><%= s.company %></td>
			<td><%= s.full_name %></td>
			<td><%= number_to_phone(s.primary_phone, area_code: true) %></td>
			<td><%= s.primary_email %></td>	
			<td><%= s.website %></td>	
			<td><%= s.notes %></td>	

			
		</tr>
		<% end %>
		
	</table>
</div>

