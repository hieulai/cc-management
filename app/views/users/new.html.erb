<div>
    <%= render(:partial => "layouts/company_sub_menu") %>
    <div class="zurb-row">
        <div class="columns">
            <h2>New User</h2>
            <%= form_for @user, :url => {:action => 'create'}, :html => {:class => 'form-horizontal'} do |f| %>
                <%= render(:partial => "form", :locals => {:f => f}) %>
                <div class="control-group">
                    <div class='controls'>
                        <%= submit_tag("Create", :class => 'btn') %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>