<div>
    <%= render(:partial => "layouts/user_sub_menu") %>
    <div class="zurb-row">
        <div class="columns">
            <h2>New User</h2>
            <%= form_for @user, :url => {:action => 'create'}, :html => {:class => 'form-horizontal'} do |f| %>
                <% if @user.errors.any? %>
                    <div id="errorExplanation">
                        <h2><%= pluralize(@user.errors.count, "Error") %> prohibited
                            this user from being saved:</h2>
                        <ul>
                            <% @user.errors.full_messages.each do |msg| %>
                                <li><%= msg %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>
                <%= render(:partial => "form", :locals => {:f => f}) %>
                <div class="control-group">
                    <div class='controls'>
                        <%= submit_tag("Create", :class => 'btn') %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>