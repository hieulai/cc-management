<div style="border: 1px solid #000000;margin: 30px auto;padding: 25px 67px;width: 150px;">
	<%= form_tag :action => 'process_login' do %>
	<p>
		<%= label_tag(:email)%>
		<%= text_field_tag(:email)%>
	</p>
	<p>
		<%= label_tag(:password)%>
		<%= password_field_tag(:password)%>
	</p>
	<p>
		<%= submit_tag "Login" %>
	</p>
	<% end %>
</div>




