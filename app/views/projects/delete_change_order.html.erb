<div>
    <%= render(:partial => "layouts/project_mgmt_sub_menu")%>
    <h2>Delete Change Order</h2>

    <%= form_for(:change_order, :url => {:action => 'destroy_change_order', :id => @change_order.id}) do |f| %>

      <p>Are you sure you want to delete this change order?</p>
      <% if @change_order.has_paid_item?  %>
          <p>This change order has 1 or more corresponding bills or payments associated with it.</p>
          <p>Deleting this change order will permanently destroy all of its related bills and payments.</p>
          <p>Do you want to continue?</p>
      <% end %>
      <% if @change_order.errors.any? %>
        <div id="errorExplanation">
            <h2><%= pluralize(@change_order.errors.count, "Error") %> prohibited
                this change_order from being deleted:</h2>
            <ul>
                <% @change_order.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
      <% end %>

      <div class="form-buttons">
          <%= submit_tag("Delete", class: 'btn') %>
      </div>

    <% end %>
</div>