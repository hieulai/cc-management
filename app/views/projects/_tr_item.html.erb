<% purchased = item.purchase_orders_categories_template_id.present? || item.bills_categories_template_id.present? ? "purchased" : ""
   changed = item.change_orders_category.present? ? "change_order" : ""
   billable = item.billable? ? '' : 'unclickable' %>
<tr class="item <%= purchased %> <%= changed %> <%= billable %>" id="item_<%= item.id %> ">
  <td>
	</td>
	<td>
        <%= item.name %>
    </td>
    <td>
        <%= item.description %>
    </td>
    <td class="right">
        <%= price_tag(item.amount, "amount budget-estimated-cost") %>
    </td>
    <td class="right">
        <%= price_tag(item.actual_cost, "budget-actual-cost") %>
    </td>
    <td class="right">
        <%= price_tag(item.committed_cost || item.actual_cost, "budget-committed-cost") %>
    </td>
    <td class="right">
        <%= price_tag(item.margin, "margin budget-estimated-profit") %>
    </td>
    <td class="right">
        <%= price_tag(item.actual_profit, "budget-actual-profit") %>
    </td>
    <td class="right">
        <%= price_tag(item.committed_profit || item.actual_profit, "budget-committed-profit") %>
    </td>
</tr>