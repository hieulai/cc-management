<% purchased = item.purchase_order_id.present? || item.bill_id.present? ? "purchased" : "" %>
<% changed = item.change_orders_category.present? ? "change_order" : "" %>
<% billable = item.billable? ? '' : 'unclickable'  %>
<tr class="item <%= purchased %> <%= changed %> <%= billable %>" id="item_<%= item.id %> ">
  <td>
	</td>
	<td>
        <%= item.name %>
    </td>
    <td>
        <%= item.description %>
    </td>
    <td class="right">
        <%= price_tag(item.amount, "amount budget-estimated-cost") %>
    </td>
    <td class="right">
        <%= price_tag(item.committed_cost, "budget-actual-cost") %>
    </td>
    <td class="right">
        <%= price_tag(item.margin, "margin budget-estimated-profit") %>
    </td>
    <td class="right">
        <%= price_tag(item.committed_profit, "budget-actual-profit") %>
    </td>
</tr>