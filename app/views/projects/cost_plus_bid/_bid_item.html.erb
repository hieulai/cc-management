<table class="grid-view item-list" summary="Items List">
    <thead>
    <tr class="header">
        <th>Item Name</th>
        <th>Description</th>
        <th class="amount">Estimated Costs</th>
        <th>Bid Amount</th>
    </tr>
    </thead>
    <tbody>
    <% if defined?(items) && items.present? %>
      <% items.each do |item| %>
        <tr>
            <td><%= item.name %></td>
            <td><%= item.description %></td>
            <td>$<%= item.amount %></td>
            <td>
                <%= hidden_field_tag "bid[bids_items_attributes][][id]", item.bid_item(bid.id).try(:id) %>
                $<%= text_field_tag 'bid[bids_items_attributes][][amount]', item.bid_item(bid.id).try(:amount), class: 'input-mini' %>
                <%= hidden_field_tag 'bid[bids_items_attributes][][item_id]', item.id %>
                <%= hidden_field_tag 'bid[bids_items_attributes][][_destroy]', !item.bid_item(bid.id).present? %>
            </td>
        </tr>

      <% end %>
    <% end %>
    <% if defined?(co_items) && co_items.present? %>
      <% co_items.each do |item| %>
        <tr class="change_order">
            <td><%= item.name %></td>
            <td><%= item.description %></td>
            <td>$<%= item.amount %></td>
            <td>
                <%= hidden_field_tag "bid[bids_items_attributes][][id]", item.bid_item(bid.id).try(:id) %>
                $<%= text_field_tag 'bid[bids_items_attributes][][amount]', item.bid_item(bid.id).try(:amount), class: 'input-mini' %>
                <%= hidden_field_tag 'bid[bids_items_attributes][][item_id]', item.id %>
                <%= hidden_field_tag 'bid[bids_items_attributes][][_destroy]', !item.bid_item(bid.id).present? %>
            </td>
        </tr>

      <% end %>
    <% end %>
    </tbody>
</table>