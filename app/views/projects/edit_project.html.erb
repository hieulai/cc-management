<div>
    <%= render(:partial => "layouts/project_mgmt_sub_menu") %>
    <div class="zurb-row main-action-bar">
        <div class="large-3 medium-4 columns">
            <%= link_to("View >>", {:action => 'show_project', :id => @project.id}, :title => 'View', :class => 'view-large action-button') %>
        </div>
        <div class="large-6 medium-6 columns">
            <h1>Update Project</h1>
        </div>
        <div class="large-3 medium-2 columns">
        </div>
    </div>
    <div class="zurb-row">
        <div class="columns margin-bottom">
            <%= form_for @project, :url => {:action => 'update_project', :id => @project.id}, :html => {:class => 'form-horizontal'} do |p| %>
                <%= fields_for @client do |c| %>
                    <%= render(:partial => "project_form", :locals => {:c => c, :p => p}) %>
                    <div class="control-group">
                        <div class='controls'>
                            <%= submit_tag("Update", :class => 'btn') %>
                        </div>
                    </div>
                <% end %>
            <% end %>
        </div>
    </div>
</div>