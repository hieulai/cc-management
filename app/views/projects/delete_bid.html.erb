<div>
    <%= render(:partial => "layouts/project_mgmt_sub_menu") %>
    <div class="zurb-row">
        <div class="columns">
            <h2>Delete Bid</h2>
            <%= form_for(:vendor, :url => {:action => 'destroy_bid', :id => @bid.id}) do |f| %>
                <p>Are you sure you want to delete this bid?</p>
                <% if @bid.errors.any? %>
                    <div id="errorExplanation">
                        <h2><%= pluralize(@bid.errors.count, "Error") %> prohibited
                            this bid from being deleted:</h2>
                        <ul>
                            <% @bid.errors.full_messages.each do |msg| %>
                                <li><%= msg %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>
                <div class="form-buttons">
                    <%= submit_tag("Delete", :class => 'btn') %>
                </div>
            <% end %>
        </div>
    </div>
</div>