<div>
	<%= render(:partial => "layouts/project_mgmt_sub_menu")%>
	<h2>Add New Bid</h2>
	
	<%= form_for @bid, :url => {:action => 'create_bid', :id => @project.id} do |f| %>
	
	<% if @bid.errors.any? %>
	  <div id="errorExplanation">
	    <h2><%= pluralize(@bid.errors.count, "Error") %> prohibited
	      this post from being saved:</h2>
	    <ul>
	    <% @bid.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	  <% end %>
	<%= render(:partial => "bid_form", :locals => {:f => f, :project => @project})%>
  <div id="item-placeholder">
      <%= render(:partial => "bid_item", :locals => {:bid => @bid, :categories_template => @bid.categories_template})%>
  </div>
	
	<% end %>

  <div class="form-buttons">
      <%= submit_tag("Create", :data => {:form => ".new_bid"}) %>
  </div>
	
</div>