<div>
    <%= render(:partial => "layouts/people_sub_menu") %>
    <div class="zurb-row">
        <div class="columns">
            <h2>Delete Contact</h2>
            <%= form_for(:contact, :url => {:action => 'destroy_contact', :id => @contact.id}) do |f| %>
              <%= render :partial => 'shared/errors', :locals => {:obj => @contact} %>
              <p>Are you sure you want to delete this contact?</p>

              <p class="reference-name"><%= @contact.display_name %></p>

              <div class="control-group">
                  <div class='controls'>
                      <%= submit_tag("Delete", :class => 'btn') %>
                  </div>
              </div>
            <% end %>
        </div>
    </div>
</div>