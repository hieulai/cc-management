<% if @contact.errors.any? %>
  <div id="errorExplanation">
      <h2><%= pluralize(@contact.errors.count, "Error") %> prohibited
          this contact from being saved:</h2>
      <ul>
          <% @contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
      </ul>
  </div>
<% end %>

<h2>Company Info:</h2>
<div class="control-group">
    <%= f.label :company, "Company Name", :class => 'col-lg-2 control-label' %>
    <div class="controls">
        <%= f.text_field(:company) %>
    </div>
</div>
<div class="control-group">
    <%= f.label :website, "Website", :class => 'col-lg-2 control-label' %>
    <div class="controls">
        <%= f.text_field(:website) %>
    </div>
</div>
<div class="control-group">
    <%= f.label :address, "Address", :class => 'col-lg-2 control-label' %>
    <div class="controls">
        <%= f.text_field(:address) %>
    </div>
</div>
<div class="control-group">
    <%= f.label :city, "City", :class => 'col-lg-2 control-label' %>
    <div class="controls">
        <%= f.text_field(:city) %>
    </div>
</div>
<div class="control-group">
    <%= f.label :state, "State", :class => 'col-lg-2 control-label' %>
    <div class="controls">
        <%= f.text_field(:state) %>
    </div>
</div>
<div class="control-group">
    <%= f.label :zipcode, "Zipcode", :class => 'col-lg-2 control-label' %>
    <div class="controls">
        <%= f.text_field(:zipcode) %>
    </div>
</div>

<div class="control-group">
    <%= f.label :notes, "Notes", :class => 'col-lg-2 control-label' %>
    <div class="controls">
        <%= f.text_area(:notes, :size => '40x5') %>
    </div>
</div>

<h2>Primary Contact's Info:</h2>
<%= render(:partial => "shared/profile_fields", :locals => {:f => f, :object => @contact.profiles[0] || @contact.profiles.build}) %>

<h2>Secondary Contact's Info:</h2>
<%= render(:partial => "shared/profile_fields", :locals => {:f => f, :object => @contact.profiles[1] || @contact.profiles.build}) %>

<h2>Associated Projects</h2>
<%= render(:partial => "shared/associated_projects_fields", :locals => {:f => f, :object => @contact}) %>


