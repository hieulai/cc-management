<% if @vendor.errors.any? %>
  <div id="errorExplanation">
      <h2><%= pluralize(@vendor.errors.count, "Error") %> prohibited
          this vendor from being saved:</h2>
      <ul>
          <% @vendor.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
      </ul>
  </div>
<% end %>

<h2>Company Info:</h2>
<div class="control-group">
    <%= f.label :vendor_type, "Vendor Type", :class => 'col-lg-2 control-label' %>
    <div class="controls">
        <div class="form-inline">
            <%= f.radio_button(:vendor_type, "Architect") %>
            <%= f.label :company, "Architect" %>
            <%= f.radio_button(:vendor_type, "Engineer") %>
            <%= f.label :company, "Engineer" %>
            <%= f.radio_button(:vendor_type, "Subcontractor") %>
            <%= f.label :company, "Subcontractor" %>
            <%= f.radio_button(:vendor_type, "Supplier") %>
            <%= f.label :company, "Supplier" %>
        </div>
    </div>
</div>
<div class="control-group">
    <%= f.label :trade, "Trade", :class => 'col-lg-2 control-label' %>
    <div class="controls">
        <%= f.text_field(:trade) %>
    </div>
</div>
<div class="control-group">
    <%= f.label :company, "Company Name", :class => 'col-lg-2 control-label' %>
    <div class="controls">
        <%= f.text_field(:company) %>
    </div>
</div>
<div class="control-group">
    <%= f.label :website, "Website", :class => 'col-lg-2 control-label' %>
    <div class="controls">
        <%= f.text_field(:website) %>
    </div>
</div>
<div class="control-group">
    <%= f.label :address, "Address", :class => 'col-lg-2 control-label' %>
    <div class="controls">
