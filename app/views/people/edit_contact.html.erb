<div>
	<%= render(:partial => "layouts/people_sub_menu")%>
	<h1 class="center">
		Edit - <%= @contact.full_name %>
	</h1>
	
	<%= link_to("View >>", {:action => 'show_contact', :id => @contact.id}) %>
	</br>
	</br>
	<%= link_to("Delete >>", {:action => 'delete_contact', :id => @contact.id}) %>
	<%= form_for @contact, :url => {:action => 'update_contact', :id => @contact.id}, html: {class: 'form-horizontal'} do |f| %>
	
	<%= render(:partial => "contact_form", :locals => {:f => f})%>

      <div class="control-group">
          <div class='controls'>
              <%= submit_tag("Update", class: 'btn') %>
          </div>
      </div>
	
	<% end %>
	
</div>
