<tr class="clickable <% if t.reconciled %> unclickable<% end %>">
    <td class="center">
        <%= t.date %>
        <%= link_to("Edit", {:controller => 'accounts', :action => 'edit_transfer', :id => t.transactionable_id}, :class => 'action edit clickable-link', :style => 'display: none') %>
    </td>
    <td>Transfer</td>
    <td><%= t.transactionable.reference %></td>
    <td>
        <%= t.transactionable.from_account.name %>
    </td>
    <td><%= t.transactionable.memo %></td>
    <td class="right"><%= price_tag(t.amount) %></td>
    <td class="center action-container">
        <%= check_box_tag("#{t.class.name}_#{t.id}", t.id, t.reconciled, :data => {:remote => true, :url => url_for(:action => "reconcile", :id => t.id)}) %>
    </td>
    <td class="right"><%= price_tag(balance) %></td>
</tr>