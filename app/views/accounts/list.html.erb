<div>
    <%= render(:partial => "layouts/accounting_sub_menu") %>
    <div class="zurb-row main-action-bar">
        <div class="large-3 medium-4 columns">
            <%= link_to("Add New Accounts >>", {:controller => 'accounts', :action => 'new'}, :title => 'Add New Accounts', :class => 'add action-button') %>
            <%= link_to("Make Transfers >>", {:action => 'new_transfer'}, :title => 'Make Transfers', :class => 'transfer action-button') %>
            <%= link_to("Reconcile >>", "#", :title => 'Reconcile', :class => 'reconcile action-button') %>
            <%= link_to("Instructions >>", "#", :title => 'Instructions', :class => 'help action-button') %>
        </div>
        <div class="large-6 medium-6 columns">
            <h1>Accounts</h1>
        </div>
        <div class="large-3 medium-2 columns">
        </div>
    </div>
    <div class="zurb-row">
        <div class="columns">
            <table class="grid-view margin-bottom responsive" summary="Account List">
                <tr class="header">
                    <th>Actions</th>
                    <th>Name</th>
                    <th>Balance</th>
                </tr>
                <% @accounts.each do |a| %>
                    <%= render(:partial => "accounts", :locals => {:account => a, :depth => 0}) %>
                <% end %>
            </table>
        </div>
    </div>
</div>

