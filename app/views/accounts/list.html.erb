<div>
	<%= render(:partial => "layouts/accounting_sub_menu")%>
	<h1>Accounts</h1>
	<%= link_to("Instructions >>", {:action => 'show'}) %>
	</br>
	</br>
	<%= link_to("Add New Accounts >>", {:controller => 'accounts', :action => 'new'}) %>
	</br>
	</br>
	<%= link_to("Make Transfers >>", {:action => 'show'}) %>
	</br>
	</br>
	<%= link_to("Reconcile >>", {:action => 'show'}) %>
	</br>
	</br>
	
	<table class="grid-view" summary="Project List">
		<tr class="header">
			<th>Actions</th>
			<th>Type</th>
			<th>Subtype</th>
			<th>Name</th>
			<th>Balance</th>			
					
		</tr>
		<% @accounts.each do |x| %>
		
		<tr>
			<td class="center">
				<%= link_to("Ledger", {:action => 'show', :id => x.id}, :class => 'action edit') %>
				<%= link_to("Show", {:action => 'show', :id => x.id}, :class => 'action edit') %>
				<%= link_to("Edit", {:action => 'edit', :id => x.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => x.id}, :class => 'action delete') %>
			</td>
			<td><%= x.category%></td>

			<td><%= x.subcategory %></td>
			<td><%= x.name %></td>
			<td>$<%= x.balance %></td>	
			
		</tr>
		<% end %>
		
	</table>
</div>

