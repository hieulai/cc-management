<div>
    <%= render(:partial => "layouts/accounting_sub_menu") %>
    <div class="zurb-row">
        <div class="columns">
            <h2>Delete Transfer</h2>
            <%= form_for(:transfer, :url => {:action => 'destroy_transfer', :id => @transfer.id}) do |f| %>
              <%= render :partial => 'shared/errors', :locals => {:obj => @transfer} %>
              <p>Are you sure you want to delete this transfer?</p>

              <div class="form-buttons">
                  <%= submit_tag("Delete", :class => 'btn') %>
              </div>
            <% end %>
        </div>
    </div>
</div>