<div>
	<%= render(:partial => "sub_menu")%>
	<h1>Subcontractor Database</h1>
	<%= link_to("Instructions >>", {:action => 'show'}) %>
	</br>
	</br>
	<%= link_to("Add New Subcontractor >>", {:action => 'new'}) %>
	</br>
	</br>
	<table class="grid-view" summary="Project List">
		<tr class="header">
			<th>Actions</th>
			<th>Company</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Primary Phone</th>
			<th>Email</th>
					
		</tr>
		<% @subcontractors.each do |sub| %>
		
		<tr>
			<td class="center">
				<%= link_to("Show", {:action => 'show', :id => sub.id}, :class => 'action edit') %>
				<%= link_to("Edit", {:action => 'edit', :id => sub.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => sub.id}, :class => 'action delete') %>
			</td>
			<td><%= sub.company %></td>
			<td><%= sub.first_name %></td>
			<td><%= sub.last_name %></td>
			<td><%= sub.primary_phone %></td>
			<td><%= sub.email %></td>	
			
		</tr>
		<% end %>
		
	</table>
</div>

