<div>
	<%= render(:partial => "layouts/people_sub_menu")%>
	<h1>Client Database</h1>
	<%= link_to("Instructions >>", {:action => 'show'}) %>
		</br>
		</br>
	<%= link_to("Add New Client >>", {:action => 'new'}) %>
		</br>
		</br>
	<%= form_tag('list', method: 'get') do %>
		<p>
			<%= label_tag :query, "Search" %>
			<%= text_field_tag(:query, @query) %>
		</p>
	<% end %>
	
	<table class="grid-view" summary="Project List">
		<tr class="header">
			<th>Actions</th>
			<th>Company</th>
			<th>Client Name</th>
			<th>Primary Phone</th>
			<th>Email</th>
			<th>Associated Projects</th>
			<th>Lead Source</th>
			<th>Notes</th>
			
					
		</tr>
		<% @clients.each do |client| %>
		
		<tr>
			<td class="center">
				<%= link_to("Show", {:action => 'show', :id => client.id}, :class => 'action edit') %>
				<%= link_to("Edit", {:action => 'edit', :id => client.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => client.id}, :class => 'action delete') %>
			</td>
			<td><%= client.company %></td>
			<td><%= client.full_name %></td>
			<td><%= number_to_phone(client.primary_phone, area_code: true) %></td>
			<td><%= client.email %></td>
			<td>
				<% client.projects.each do |project| %>
					<%= project.name %>
				</br>
				<% end %>
			</td>
			<td><%= client.lead_source %></td>
			<td><%= client.notes %></td>
			
		</tr>
		<% end %>
		
	</table>
</div>

