<div>
	<%= render(:partial => "layouts/people_sub_menu")%>
	<h1 class="center">
		Edit -
		<% if @client.company == '' %>
			<%= @client.full_name %>
		<% else %>
			<%= @client.company %>
		<% end %>
	</h1>
	
	<%= link_to("View >>", {:action => 'show', :id => @client.id}) %>
	</br>
	</br>
	<%= link_to("Delete >>", {:action => 'delete', :id => @client.id}) %>
	<%= form_for @client, :url => {:action => 'update', :id => @client.id}, html: {class: 'form-horizontal'} do |f| %>
	
	<%= render(:partial => "form", :locals => {:f => f})%>

      <div class="control-group">
          <div class='controls'>
              <%= submit_tag("Update", class: 'btn') %>
          </div>
      </div>

<% end %>
	
</div>
