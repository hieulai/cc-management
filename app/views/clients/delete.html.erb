<div>
    <%= render(:partial => "layouts/people_sub_menu") %>
    <div class="zurb-row">
        <div class="columns">
            <h2>Delete Client</h2>
            <%= form_for(:client, :url => {:action => 'destroy', :id => @client.id}) do |f| %>
              <%= render :partial => 'shared/errors', :locals => {:obj => @client} %>

              <p>Are you sure you want to delete this client?</p>

              <p class="reference-name"><%= @client.display_name %></p>

              <div class="form-buttons">
                  <%= submit_tag("Delete", :class => 'btn') %>
              </div>
            <% end %>
        </div>
    </div>
</div>