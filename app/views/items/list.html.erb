<div>
  <%= render(:partial => "layouts/estimating_sub_menu")%>
  <h1>Items List</h1>
  <%= link_to("Instructions >>", {:action => 'show'}) %>
  </br>
  </br>
  <%= link_to("Create New Item >>", {:action => 'new'}) %>
  </br>
  </br>
	<%= form_tag('list', method: 'get') do %>
		<p>
			<%= label_tag :query, "Search" %>
			<%= text_field_tag(:query, @query) %>
		</p>
	<% end %>
  <table class="grid-view" summary="Project List">
    <tr class="header">
      <th>Actions</th>
      <th>Name</th>
      <th>Description</th>
      <th>Default Quantity</th>
      <th>Cost</th>
      <th>Unit</th>
      <th>Margin</th>
      <th>Price</th>
      <th>Notes</th>
    <!-- Displays all items that are attached to a category -->
    </tr>
    <!-- Displays all items that are NOT attached to a category -->
    <% @items.each do |item| %>

    <tr>
      <td class="center">
        <%= link_to("Edit", {:action => 'edit', :id => item.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => item.id}, :class => 'action delete') %>
      </td>
      <td><%= item.name %></td>
      <td><%= item.description %></td>
      <td><%= item.qty %></td>
      <td>$<%= item.estimated_cost %></td>
      <td><%= item.unit %></td>
      <td>$<%= item.margin %></td>
      <td>$<%= item.price %></td>
      <td><%= item.notes %></td>
    </tr>

    <% end %>
  </table>
</div>

