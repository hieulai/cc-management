<table class="grid-view" summary="Project List">
  <tr class="header">
    <th>Name</th>
    <th>Description</th>
    <th>Cost</th>
    <th>Unit</th>
    <th>Margin</th>
    <th>Price</th>
    <th>Notes</th>
  <!-- Displays all items that are attached to a category -->
  </tr>
  <!-- Displays all items that are NOT attached to a category -->
  <% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.description %></td>
    <td><%= item.cost %></td>
    <td><%= item.unit %></td>
    <td><%= item.margin %></td>
    <td><%= item.price %></td>
    <td><%= item.notes %></td>
  </tr>

  <% end %>
</table>