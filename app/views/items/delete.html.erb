<div>
    <%= render(:partial => "layouts/estimating_sub_menu") %>
    <div class="zurb-row">
        <div class="columns">
            <h2>Delete Item</h2>
            <%= form_for(:item, :url => {:action => 'destroy', :id => @item.id}) do |f| %>
                <p>Are you sure you want to delete this item?</p>

                <p class="reference-name"><%= @item.name %></p>

                <div class="form-buttons">
                    <%= submit_tag("Delete", :class => 'btn') %>
                </div>
            <% end %>
        </div>
    </div>
</div>