<div>
    <%= render(:partial => "layouts/company_sub_menu") %>
    <h2>Edit Company Info</h2>

    <%= form_for @builder, :url => {:action => 'update', :id => @builder.id}, html: {class: 'form-horizontal'} do |f| %>

      <%= render(:partial => "edit_form", :locals => {:f => f}) %>


      <div class="control-group">
          <div class='controls'>
              <%= submit_tag("Update", class: 'btn') %>
          </div>
      </div>

    <% end %>

</div>
