<div>
	<%= render(:partial => "layouts/people_sub_menu")%>
	<h1>All People</h1>
	<%= link_to("Instructions >>", {:action => 'show'}) %>
	</br>
	</br>
	<%= form_tag('all', method: 'get') do %>
		<p>
			<%= label_tag :query, "Search" %>
			<%= text_field_tag(:query, @query) %>
		</p>
	<% end %>
	<table class="grid-view" summary="Project List">
		<tr class="header">
			<th>Actions</th>
			<th>Type</th>
			<th>Company</th>
			<th>Main Contact</th>
			<th>Primary Phone</th>
			<th>Email</th>
			<th>Notes</th>
					
		</tr>
		<% @architects.each do |arch| %>
		
		<tr>
			<td class="center">
				<%= link_to("View", {:action => 'show', :id => arch.id}, :class => 'action edit') %>
				<%= link_to("Edit", {:action => 'edit', :id => arch.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => arch.id}, :class => 'action delete') %>
			</td>
			<td>Architect</td>
			<td><%= arch.company %></td>
			<td><%= arch.full_name %></td>
			<td><%= number_to_phone(arch.primary_phone, area_code: true) %></td>
			<td><%= arch.email %></td>		
			<td><%= arch.notes %></td>	
			
		</tr>
		<% end %>
		<% @clients.each do |client| %>
		
		<tr>
			<td class="center">
				<%= link_to("View", {:controller => 'clients', :action => 'show', :id => client.id}, :class => 'action edit') %>
				<%= link_to("Edit", {:controller => 'clients', :action => 'edit', :id => client.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:controller => 'clients', :action => 'delete', :id => client.id}, :class => 'action delete') %>
			</td>
			<td>Client</td>
			<td><%= client.company %></td>
			<td><%= client.full_name %></td>
			<td><%= number_to_phone(client.primary_phone, area_code: true) %></td>
			<td><%= client.email %></td>	
			<td><%= client.notes %></td>	
			
		</tr>
		<% end %>
		<% @subcontractors.each do |sub| %>
		
		<tr>
			<td class="center">
				<%= link_to("View", {:controller => 'subcontractors', :action => 'show', :id => sub.id}, :class => 'action edit') %>
				<%= link_to("Edit", {:controller => 'subcontractors', :action => 'edit', :id => sub.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:controller => 'subcontractors', :action => 'delete', :id => sub.id}, :class => 'action delete') %>
			</td>
			<td><%= sub.trade %></td>
			<td><%= sub.company %></td>
			<td><%= sub.full_name %></td>
			<td><%= number_to_phone(sub.primary_phone, area_code: true) %></td>
			<td><%= sub.email %></td>		
			<td><%= sub.notes %></td>	
			
		</tr>
		<% end %>
		<% @suppliers.each do |sup| %>
		
		<tr>
			<td class="center">
				<%= link_to("View", {:controller => 'suppliers', :action => 'show', :id => sup.id}, :class => 'action edit') %>
				<%= link_to("Edit", {:controller => 'suppliers', :action => 'edit', :id => sup.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:controller => 'suppliers', :action => 'delete', :id => sup.id}, :class => 'action delete') %>
			</td>
			<td>Supplier</td>
			<td><%= sup.company %></td>
			<td><%= sup.full_name %></td>
			<td><%= number_to_phone(sup.primary_phone, area_code: true) %></td>
			<td><%= sup.primary_email %></td>	
			<td><%= sup.notes %></td>	
			
		</tr>
		<% end %>
		
	</table>
</div>

