<div>
	<%= render(:partial => "sub_menu")%>
	<h1>Architect Database Test</h1>
	<%= link_to("Instructions >>", {:action => 'show'}) %>
	</br>
	</br>
	<%= link_to("Add New Architect >>", {:action => 'new'}) %>
	</br>
	</br>
	<%= form_tag('list', method: 'get') do %>
		<p>
			<%= label_tag :query, "Search" %>
			<%= text_field_tag(:query, @query) %>
		</p>
	<% end %>
	<table class="grid-view" summary="Project List">
		<tr class="header">
			<th>Actions</th>
			<th>Company</th>
			<th>Main Contact</th>
			<th>Primary Phone</th>
			<th>Email</th>
			<th>Notes</th>
					
		</tr>
		<% @architects.each do |arch| %>
		
		<tr>
			<td class="center">
				<%= link_to("Show", {:action => 'show', :id => arch.id}, :class => 'action edit') %>
				<%= link_to("Edit", {:action => 'edit', :id => arch.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => arch.id}, :class => 'action delete') %>
			</td>
			<td><%= arch.company %></td>
			<td><%= arch.full_name %></td>
			<td><%= arch.primary_phone %></td>
			<td><%= arch.email %></td>	
			<td><%= arch.notes %></td>	
			
		</tr>
		<% end %>
		
	</table>
</div>

