<div>
    <%= render(:partial => "layouts/leads_sub_menu") %>
    <div class="zurb-row main-action-bar">
        <div class="large-3 medium-4 columns">
            <%= link_to("Edit >>", {:action => 'edit', :id => @project.id}, :title => 'Edit', :class => 'edit-large action-button') %>
        </div>
        <div class="large-6 medium-6 columns">
        </div>
        <div class="large-3 medium-2 columns">
        </div>
    </div>
    <div class="zurb-row">
        <div class="columns margin-bottom">
            <h2>Lead Details For: <%= @project.name %></h2>

            <h3>Project Info</h3>

            <p>
                <b>Project Name:</b>
                <%= @project.name %>
            </p>

            <p>
                <b>Project Type:</b>
                <%= @project.project_type %>
            </p>

            <p>
                <b>Lead Stage:</b>
                <%= @project.lead_stage %>
            </p>

            <p>
                <b>Lead Source</b>
                <%= @client.lead_source %>
            </p>

            <p>
                <b>Anticipated Revenue:</b>
                <%= @project.revenue %>
            </p>

            <p>
                <b>Lead Notes:</b>
                </br>
                <%= @project.lead_notes %>

            </p>

            <p>
                <b>Created At</b>
                <%= @project.created_at %>
            </p>

            <p>
                <b>Last Updated:</b>
                <%= @project.updated_at %>
            </p>


            <h3>Client Info</h3>

            <p>
                <b>Last Contacted:</b>
                <%= @client.last_contacted %>
            </p>

            <p>
                <b>Address:</b>
                <%= @client.address %>
            </p>

            <p>
                <b>City:</b>
                <%= @client.city %>
            </p>

            <p>
                <b>State:</b>
                <%= @client.state %>
            </p>

            <p>
                <b>Zipcode:</b>
                <%= @client.zipcode %>
            </p>

            <h4>Primary Contact's Info:</h4>
            <%= render(:partial => "shared/profile_details", :locals => {:object => @client.profiles[0] || @client.profiles.build}) %>

            <h4>Secondary Contact's Info:</h4>
            <%= render(:partial => "shared/profile_details", :locals => {:object => @client.profiles[1] || @client.profiles.build}) %>
        </div>
    </div>
</div>