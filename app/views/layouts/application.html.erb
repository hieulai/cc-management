<!DOCTYPE html>
<html>
<head>
  <title>Construction Central</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag :application %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id='page'>
		<div id='header'>
			<h1>Construction Central</h1>
			<div id='username'>
				<%= (session[:builder_name]) if session[:builder_name] %>
			</br>
				<%= (session[:username]) if session[:username] %>
			</br>
				<%= link_to("Logout", {:controller => 'users', :action => 'logout'}) %>
			<div id='username'>
		</div>
			<%= render partial: 'layouts/navigation' %>
		<div id='content'>
			<%= yield %>
		</div>
	</div>
</body>
</html>

