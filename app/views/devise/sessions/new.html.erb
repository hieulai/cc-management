<div style="border: 1px solid #000000;margin: 30px auto;padding: 25px 67px;width: 150px;">
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, :required => false, :autofocus => true, :input_html => {:size => 30} %>
      <%= f.input :password, :required => false, :input_html => {:size => 30} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Login" %>
    </div>
  <% end %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
</div>