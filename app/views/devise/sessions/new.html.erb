<div class="login-box">
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, :required => false, :autofocus => true, :input_html => {:size => 30} %>
      <%= f.input :password, :required => false, :input_html => {:size => 30} %>
    </div>

    <div>
      <%= f.button :submit, "Login", class: 'btn' %>
    </div>
  <% end %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
</div>